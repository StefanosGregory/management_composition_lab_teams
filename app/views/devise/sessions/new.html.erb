<title>Login</title>
<div class="container p-2 bg-dark shadow rounded p-4 py-4 mb-5 col-xl-4 col-lg-4 col-md-6 col-10 mx-auto">
  <h1 class="display-1 text-light">Login</h1>
  <p class="text-light">
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="white" class="bi bi-people-fill d-inline-block align-text-top" viewBox="0 0 16 16">
      <path d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1H7zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
      <path fill-rule="evenodd" d="M5.216 14A2.238 2.238 0 0 1 5 13c0-1.355.68-2.75 1.936-3.72A6.325 6.325 0 0 0 5 9c-4 0-5 3-5 4s1 1 1 1h4.216z"/>
      <path d="M4.5 8a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5z"/>
    </svg>
    Management composition laboratory teams software
  </p>
  <%# FORM %>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%# Email %>
    <div class="field mb-3 row text-light">
      <%= f.label :email, class: "col-sm-2 col-form-label" %><br />
      <div class="col-sm-10">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control text-dark" %>
      </div>
    </div>
    <%# Password %>
    <div class="field mb-3 row text-light">
      <%= f.label :password, class: "col-sm-2 col-form-label" %><br />
      <div class="col-sm-10">
        <%= f.password_field :password, class: "form-control text-dark", autocomplete: "current-password" %>
      </div>
    </div>
    <%# Rember checkbox %>
    <% if devise_mapping.rememberable? %>
      <div class="field text-light">
        <%= f.check_box :remember_me, class: "form-check-input", type: "checkbox" %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <br>
    <%# Login button %>
    <div class="actions col-sm-2 pb-2">
      <%= f.submit "Log in", class: 'form-control btn btn-primary' %>
    </div>
  <% end %>
  <%# Links %>
  <%= render "devise/shared/links" %>
</div>
