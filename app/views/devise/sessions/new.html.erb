<title>Login</title>
<div class="container p-2 bg-dark shadow rounded p-4 py-4 mb-5 col-xl-4 col-lg-4 col-md-6 col-10 mx-auto">
  <h1 class="display-1 text-light">Login</h1>
  <p class="text-light">Management composition laboratory teams software</p>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field mb-3 row text-light">
      <%= f.label :email, class: "col-sm-2 col-form-label" %><br />
      <div class="col-sm-10">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control text-dark" %>
      </div>
    </div>
    <div class="field mb-3 row text-light">
      <%= f.label :password, class: "col-sm-2 col-form-label" %><br />
      <div class="col-sm-10">
        <%= f.password_field :password, class: "form-control text-dark", autocomplete: "current-password" %>
      </div>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="field text-light">
        <%= f.check_box :remember_me, class: "form-check-input", type: "checkbox" %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <br>
    <div class="actions col-sm-2">
      <%= f.submit "Log in", class: 'form-control btn btn-primary' %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
